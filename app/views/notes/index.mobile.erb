<div data-role="header">
  <h1>Notes</h1>
</div>

<div data-role="content">
  <ul data-role="listview">
  <% @notes.each do |note| %>
    <li>
    <%= link_to note do %>
      <h2><%= note.title %></h2>
      <%= truncate(note.body, :length => 25) %>
    <% end %>
    </li>
  <% end %>
  </ul>
</div>

<div data-role="footer">
  <%= link_to 'New Note', new_note_path %>
</div>
